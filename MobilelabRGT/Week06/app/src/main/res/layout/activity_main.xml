<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Silahkan pilih fitur di bawah ini:" />

            <Button
                android:id="@+id/property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fitur Properti"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:onClick="keproperty"/>

            <Button
                android:id="@+id/drawable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fitur Drawable"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:onClick="kedraw"/>

            <Button
                android:id="@+id/fisika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fitur Fisika"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:onClick="kefis"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>